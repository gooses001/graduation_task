<div class="container">
<%= form_with(model: @request, local:true)do|form| %>

  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= @request.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="request_content">
    <%= form.label :date %>
