  </div>

  <div class="request_content">
    <%= form.label :chief %>
    <%= form.text_field :chief %>
  </div>

  <div class="request_content">
    <%= form.label :mailing %>
    <%= form.text_field :mailing %>
  </div>

  <div class="request_content">
